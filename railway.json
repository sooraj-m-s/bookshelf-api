{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python bookshelf_api/manage.py migrate && gunicorn bookshelf_api/bookshelf.wsgi --bind=0.0.0.0:$PORT",
    "healthcheckPath": "/api/",
    "healthcheckTimeout": 300000,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}